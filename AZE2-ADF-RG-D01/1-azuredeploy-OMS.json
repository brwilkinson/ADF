      },
      {
        "name": "PhysicalDisk11",
        "kind": "WindowsPerformanceCounter",
        "properties": {
          "objectName": "PhysicalDisk",
          "instanceName": "_Total",
          "intervalSeconds": 10,
          "counterName": "Avg. Disk Read Queue Length"
        }
      },
      {
        "name": "PhysicalDisk12",
        "kind": "WindowsPerformanceCounter",
        "properties": {
          "objectName": "PhysicalDisk",
          "instanceName": "_Total",
          "intervalSeconds": 10,
          "counterName": "Avg. Disk Write Queue Length"
