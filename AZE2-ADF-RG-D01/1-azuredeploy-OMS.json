      },
      {
        "name": "PhysicalDisk13",
        "kind": "WindowsPerformanceCounter",
        "properties": {
          "objectName": "PhysicalDisk",
          "instanceName": "*",
          "intervalSeconds": 10,
          "counterName": "Disk Transfers/sec"
        }
